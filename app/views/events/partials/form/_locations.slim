section.py-4#location_fields
  header.mb-5.flex.flex-row.justify-between.items-center.text-stone-950
    h3.font-semibold
      i.fa-light.fa-location-dot
      | &nbsp;&nbsp;
      = "Location"

  = render partial: "components/switch",
          locals: { checked: @event.online,
          label: t(".switch_label"),
          object_name: "event",
          method: "online",
          checked_value: "true",
          unchecked_value: "false",
          data: { body_class: "event-online" } }

  #fields_online.mt-2
    = f.label :online_url, t(".label"), class: "block mb-2"
    = f.url_field :website,
                  placeholder: t(".placeholder_online"),
                  autocomplete: "off",
                  class: "rounded placeholder:text-stone-400 border-stone-400 dark:border-stone-700 w-full dark:bg-black text-sm"

  #fields_offline
    #location_dropdowns
      = render partial: "events/partials/form/location_dropdowns", locals: { unit: current_unit, event: @event }

css:
  #location_fields #fields_offline {
    display: block;
  }

  #location_fields #fields_online {
    display: none;
  }

  #location_fields:has(#event_online:checked) #fields_online {
    display: block;
  }

  #location_fields:has(#event_online:checked) #fields_offline {
    display: none;
  }  



  option[value="_separator"] {
    font-size: 1px;
    min-height: 1px;
    max-height: 1px;
    padding: 0;
    background-color: #000000;
  }

javascript:
  document.querySelector("#event_online").addEventListener("change", function(event) {
    if (event.target.checked) {
      document.querySelector("#event_website").select();
    }
  });