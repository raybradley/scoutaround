<%= turbo_frame_tag "main" do %>
  <div class="mx-auto max-w-md">
    <header>
      <%= link_to unit_path(@unit),
                  class: "font-bold text-brand-500",
                  data: { turbo_action: "advance" } do %>
        <i class="fa-solid fa-chevron-left mr-1"></i>
        <%= t("back_to_app") %>
      <% end %>
    </header>

    <header class="mt-8 mb-4 px-2">
      <h1 class="text-4xl font-bold">
        <%= "#{@member.first_name}'s Profile" %>
        <div class="text-sm font-bold uppercase tracking-wider">
          <%= @unit.name %>
        </div>
      </h1>

      <section class="flex flex-col divide-y dark:divide-stone-600">
        <%= link_to info_unit_member_path(@member),
                    class: "block px-2 py-3 text-lg font-bold hover:bg-stone-100 dark:hover:bg-black",
                    data: { turbo_action: "advance" } do %>
          <i class="fa-solid fa-fw fa-address-card mr-2"></i>
          <%= t(".info") %>
        <% end %>
      </section>
  </div>
<% end %>

