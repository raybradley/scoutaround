  css:
    body {
      background: rgb(244, 246, 234);
      margin: 0;
      padding: 0;
      font-family: 'Inter', sans-serif;
    }

    main {
      max-width: 800px;
      margin: 0 auto;
    }

    .hero {
      background-size: cover;
      background-position: center;
      position: relative;
      height: 30rem;
      color: #fff;
      text-align: center;

      h1 {
        position: absolute;
        font-family: serif;
        font-weight: 300;
        font-size: 24px;
        left: 0;
        right: 0;
        bottom: 5%;
        margin: 0;
        line-height: 1.1;
        font-family: clarendon-text-pro, serif;
        filter: drop-shadow(0 0 10px rgb(0, 0, 0, 1));

        img {
          font-size: 12px;
          display: block;
          margin: 0 auto;
        }
      }

      @media (min-width: 768px) {
        h1 {
          font-size: 36px;
        }
      }

      @media (min-width: 1024px) {
        h1 {
          font-size: 48px;
        }
        .hero {
          height: 40rem;
        }        
      }

      @media (min-width: 1280px) {
        h1 {
          font-size: 72px;
        }
      }

      .content {
        max-width: 1200px;
        margin: 0 auto;
        position: relative;
        height: 100%;
      }

      .photo-annotation {
        position: absolute;
        bottom: 0;
        left: 0;
        font-size: 13px;
        font-weight: 400;
        opacity: 0.8;
      }      

      .top-gradient {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 200px;
        background: linear-gradient(rgba(0, 0, 0, 0.5), transparent);
      }

      .bottom-gradient {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 50%;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
      }

      header {
        margin: 0 auto;
        position: relative;
        display: flex;
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgb(0, 0, 0, 0, 0));

        a {
          display: block;
          padding: 0 0.5rem;
          color: #fff;
          text-decoration: none;
          text-transform: uppercase;
          font-size: 13px;
          font-weight: 500;
          letter-spacing: 0.1rem;
        }

        button.menu-toggle {
          padding: 1rem;
          background: none;
          border: none;
          color: #fff;
          font-size: 1.5rem;
          cursor: pointer;
        }

        a.unit-id {
          font-weight: 700;
        }

        nav.persistent-nav {

        }

        nav.main-nav, nav.persistent-nav {
          a {
            display: inline-block;
            padding: 2rem 1rem;
          }
        }



        a.cta {
          display: inline-block;
          padding: 1rem 2rem;
          border: 3px solid white;
          border-radius: 9999px;
          margin-left: 1rem;

          &:hover {
            background: rgba(255, 255, 255, 0.1);
          }
        }

        .logo {
          position: absolute;
          left: 0;
          top: 0;

          a {
            display: inline-block;
            padding: 2rem 0;
            font-weight: 800;
          }
        }
      }
    }

    .unit-logo {
      width: 200px;
    }

    .button.menu-toggle {
      display: block;
    } 

    .photo-caption {
      font-size: 11px;
    }

    .upcoming-events {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
    }

    .upcoming-event {
      display: none;
    }

    .upcoming-event:nth-child(-n+4) {
      display: block;
    }

    @media (min-width: 768px) {
      .hero {
        height: 40rem;
      }
      .unit-logo {
        width: 300px;
      }
      .upcoming-events {
        grid-template-columns: repeat(6, 1fr);
      }
      .upcoming-event:nth-child(-n+6) {
        display: block;
      }     
    }

    @media (min-width: 1024px) {
      .hero {
        height: 50rem;
      }
      .unit-logo {
        width: 400px;
      }
      .upcoming-events {
        grid-template-columns: repeat(8, 1fr);
      }      
      .upcoming-event:nth-child(-n+8) {
        display: block;
      }     
    }

    @media (min-width: 1280px) {
      button.menu-toggle {
        display: none;
      }
      .upcoming-events {
        grid-template-columns: repeat(10, 1fr);
      }      
      .upcoming-event:nth-child(-n+10) {
        display: block;
      } 
    }