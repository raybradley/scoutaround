doctype html
html(style="height:100%;")
  head

  body(style="font-family: sans-serif; height:100%;")
    table(style="width: 500px; line-height: 110%; background: #292524; color: #f5f5f4; margin:0 auto; height:100%; table-layout:fixed;" cellpadding=0 cellspacing=0)
      tr
        td(valign="top")
          table(style="width: 100%; background: #f5f5f4; color: #292524;" cellpadding=0 cellspacing=0)
            - if @unit&.logo&.attached?
              tr
                td(style="padding-top: 30px;" valign="top" align="center")
                  = link_to root_url, style: "display:block;" do
                    = image_tag "data:image/#{@unit&.logo.filename.extension};base64,#{Base64.encode64(@unit.logo.blob.download)}",
                                style: "width:80%;max-height:150px;width:auto;text-decoration:none;color:rgb(255,255,255,1.0);"

            tr
              td(style="padding: 30px; line-height: 1.4; valign:top;")
                = yield
          
          - if content_for?(:secondary)
            table(style="width: 100%; background: #e7e5e4; color: #292524;" cellpadding=0 cellspacing=0)
              tr
                td(style="line-height: 1.4; valign:top; padding: 30px;")
                  = yield :secondary

          - if content_for?(:tertiary)
            table(style="width: 100%; background: #57534e; color: #fafaf9;" cellpadding=0 cellspacing=0)
              tr
                td(style="line-height: 1.4; valign:top; padding: 30px;")
                  = yield :tertiary                  

          table(style="width: 100%;" cellpadding=0 cellspacing=0)
            tr
              td(style="padding: 30px;")
                = yield :footer

  css:
    body {
      color: #333;
    }

    .button {
      border-radius: 0.25rem;
      padding: 0.75rem 2rem;
      background: #ddd;
      color: #333;
      text-decoration: none;
      font-weight: bold;
      line-height: 1.0;
      text-align: center;
    }

    .button:hover {
      background: #ccc;
    }

    .button-green {
      background: #65a30d;
      color: #f7fee7;
    }

    .button-green:hover {
      background: #4d7c0f;
    }

    .text-lg {
      font-size: 110%;
    }

    dt {
      font-weight: bold;
      margin-top: 1rem;
    }

    dd {
      margin-left: 0;
    }

    .button-rsvp {
      background-color: #fde047;
      color: #854d0e;
    }

    .button-rsvp:hover {
      background-color: #facc15;
      color: #713f12;
    }

    .center {
      text-align: center;
    }

    h1, h2, h3, h4, h5, h6, p {
      margin: 0;
      line-height: 1.0;
    }

    p {
      line-height: 1.5;
    }

    .border-t {
      border-top: 1px solid #ccc;
    }

    .mb-2 {
      margin-bottom: 0.5rem;
    }

    .py-2 {
      padding-top: 0.5rem;
      padding-bottom: 0.5rem;
    }

    .py-1 {
      padding-top: 0.25rem;
      padding-bottom: 0.25rem;
    }

    .py-4 {
      padding-top: 1rem;
      padding-bottom: 1rem;
    }

    .border-black {
      border-color: #333;
    }

    .text-blue-500 {
      color: blue;
    }

    .underline {
      text-decoration: underline;
    }

    .font-bold {
      font-weight: bold;
    }

    .block {
      display: block;
    }

    .inline-block {
      display: inline-block;
    }

    .w-full {
      width: 100%;
    }

    .text-lg {
      font-size: 1.25rem;
    }

    .text-black {
      color: #333;
    }

    .text-stone-300 {
      color: #e7e5e4;
    }

    .text-yellow-300 {
      color: #fde047;
    }

    .text-yellow-500 {
      color: #eab308;
    }

    .text-yellow-700 {
      color: #a16207;
    }

    .text-white {
      color: #fff;
    }

    .no-underline {
      text-decoration: none;
    }
  
    ul, ol {
      margin: 0;
      padding: 0;
      list-style: none;
    }

    .pr-2 {
      padding-right: 0.5rem;
    }

    .px-1 {
      padding-left: 0.25rem;
      padding-right: 0.25rem;
    }

    .pl-1 {
      padding-left: 0.25rem;
    }

    .px-2 {
      padding-left: 0.5rem;
      padding-right: 0.5rem;
    }

    .text-sm {
      font-size: 0.875rem;
